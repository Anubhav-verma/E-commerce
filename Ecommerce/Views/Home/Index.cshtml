<h2>Home</h2>

<h1>Welcome to our Ecommerce Store</h1>
<div class="container">

    <div class="row" >
        @foreach (var product in Model)
        {
            <div class="col-md-3"> 
                <div class="card mb-3 box-shadow" >

                    <a href="@Url.Action("Products","Product", new {productTypeId = product.product_type_id })">
                        <img src="@Url.Action("GetImage", "Product", new { id = product.image_id})" alt="@product.product_type_name" Class="card-img-top img-fluid">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">@product.product_type_name</h5>
                        <p class="card-text">@product.description</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
   
